---
// VoicePrompt.astro — Language selection screen
---
<div id="voice-prompt-overlay" role="dialog" aria-modal="true" aria-label="Begin rosary" style="display:none;">
  <div class="vp-inner">
    <div class="vp-cross" aria-hidden="true">✝</div>
    <h1 class="vp-title">Rosari</h1>
    <p class="vp-subtitle">The Holy Rosary</p>

    <p class="vp-question">In which tongue shall we pray?</p>

    <div class="vp-text-row">
      <input
        id="language-text-input"
        type="text"
        placeholder="English, Español, Latin, Tagalog…"
        autocomplete="off"
        spellcheck="false"
        aria-label="Enter your prayer language"
        autofocus
      />
      <button id="language-text-submit" class="vp-go-btn" aria-label="Begin">Begin</button>
    </div>

    <p id="voice-status" class="vp-status"></p>
  </div>
</div>

<!-- Resume Banner (returning users) -->
<div id="resume-banner" style="display:none;" role="dialog" aria-label="Resume previous session">
  <div class="resume-inner">
    <p>Welcome back. Continue in <strong class="resume-lang"></strong>?</p>
    <div class="resume-btns">
      <button id="resume-yes-btn" class="btn-gold">Yes, begin</button>
      <button id="resume-no-btn" class="btn-ghost">Change</button>
    </div>
  </div>
</div>

<script>
  document.getElementById('language-text-input')?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') document.getElementById('language-text-submit')?.click();
  });
</script>

<style>
  #voice-prompt-overlay {
    position: fixed;
    inset: 0;
    z-index: 100;
    background: radial-gradient(ellipse at center, #0d0b06 0%, #040302 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1.5rem;
    animation: fadeIn 1.2s ease forwards;
  }

  .vp-inner {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.2rem;
    max-width: 420px;
    width: 100%;
    text-align: center;
    animation: fadeInUp 1s ease forwards;
  }

  .vp-cross {
    font-size: 2.8rem;
    color: var(--gold);
    text-shadow: 0 0 24px var(--gold-glow);
  }

  .vp-title {
    font-family: 'Cinzel', Georgia, serif;
    font-size: clamp(2.8rem, 10vw, 4.2rem);
    font-weight: 700;
    letter-spacing: 0.12em;
    color: var(--gold-light);
    text-shadow: 0 0 40px var(--gold-glow), 0 2px 4px rgba(0,0,0,0.8);
    margin: 0;
    line-height: 1;
  }

  .vp-subtitle {
    font-family: 'Cormorant Garamond', serif;
    font-style: italic;
    font-size: 1.15rem;
    color: var(--text-dim);
    letter-spacing: 0.08em;
    margin-top: -0.4rem;
  }

  .vp-question {
    font-family: 'Cinzel', serif;
    font-size: clamp(0.95rem, 3vw, 1.15rem);
    color: var(--gold-light);
    letter-spacing: 0.05em;
    line-height: 1.5;
    font-weight: 400;
    opacity: 0.85;
  }

  .vp-text-row {
    display: flex;
    gap: 0.5rem;
    width: 100%;
    max-width: 380px;
  }

  #language-text-input {
    flex: 1;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    border-radius: 4px;
    background: rgba(255,255,255,0.05);
    color: var(--text);
    font-family: 'Cormorant Garamond', serif;
    font-size: 1.1rem;
    outline: none;
    letter-spacing: 0.02em;
    transition: border-color 0.2s, background 0.2s;
  }

  #language-text-input:focus {
    border-color: var(--gold-dim);
    background: rgba(255,255,255,0.08);
  }

  .vp-go-btn {
    padding: 0.75rem 1.4rem;
    background: var(--gold-dim);
    color: var(--bg);
    border-radius: 4px;
    font-family: 'Cinzel', serif;
    font-size: 0.88rem;
    font-weight: 600;
    letter-spacing: 0.08em;
    transition: background 0.2s, transform 0.15s;
    white-space: nowrap;
  }

  .vp-go-btn:hover { background: var(--gold); transform: scale(1.03); }
  .vp-go-btn:active { transform: scale(0.98); }

  .vp-status {
    font-family: 'Cormorant Garamond', serif;
    font-style: italic;
    font-size: 0.95rem;
    color: var(--accent2);
    min-height: 1.4em;
    transition: color 0.3s;
  }

  /* Resume banner */
  #resume-banner {
    position: fixed;
    top: 0; left: 0; right: 0;
    z-index: 200;
    background: var(--bg-glass);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--border);
    padding: 1rem;
    animation: fadeInUp 0.5s ease;
  }

  .resume-inner {
    max-width: 600px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    flex-wrap: wrap;
    font-size: 1rem;
    color: var(--text-dim);
  }

  .resume-btns { display: flex; gap: 0.5rem; }

  .btn-gold {
    padding: 0.45rem 1.1rem;
    background: var(--gold-dim);
    color: var(--bg);
    border-radius: 4px;
    font-family: 'Cinzel', serif;
    font-size: 0.85rem;
    font-weight: 600;
    transition: background 0.2s;
  }
  .btn-gold:hover { background: var(--gold); }

  .btn-ghost {
    padding: 0.45rem 1rem;
    background: transparent;
    color: var(--text-muted);
    border: 1px solid var(--border-dim);
    border-radius: 4px;
    font-size: 0.85rem;
    transition: all 0.2s;
  }
  .btn-ghost:hover { border-color: var(--border); color: var(--text-dim); }
</style>
